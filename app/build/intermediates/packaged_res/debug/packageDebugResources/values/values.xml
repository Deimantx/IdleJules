<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="button_buy">#FF27AE60</color>
    <color name="button_buy_pressed">#FF229954</color>
    <color name="button_equip">#FF3498DB</color>
    <color name="button_equip_pressed">#FF2980B9</color>
    <color name="button_sell">#FFE74C3C</color>
    <color name="button_sell_pressed">#FFD32F2F</color>
    <color name="combat_stat_bg">#FFF8F9FA</color>
    <color name="gold_color">#FFD4AF37</color>
    <color name="item_common">#FF9D9D9D</color>
    <color name="item_epic">#FFA335EE</color>
    <color name="item_legendary">#FFFF8000</color>
    <color name="item_rare">#FF0070DD</color>
    <color name="item_uncommon">#FF1EFF00</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="rpg_accent">#FFE94560</color>
    <color name="rpg_background">#FF1A1A2E</color>
    <color name="rpg_card">#FF0F3460</color>
    <color name="rpg_gold">#FFFFD700</color>
    <color name="rpg_primary">#FF533483</color>
    <color name="rpg_silver">#FFC0C0C0</color>
    <color name="rpg_surface">#FF16213E</color>
    <color name="rpg_text_muted">#FF999999</color>
    <color name="rpg_text_primary">#FFFFFFFF</color>
    <color name="rpg_text_secondary">#FFCCCCCC</color>
    <color name="section_divider">#FFBDC3C7</color>
    <color name="stat_accent">#FF3498DB</color>
    <color name="stat_primary">#FF2C3E50</color>
    <color name="stat_secondary">#FF34495E</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Idle RPG</string>
    <style name="CharacterStatText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/stat_accent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="CombatStatText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/stat_secondary</item>
        <item name="android:background">@color/combat_stat_bg</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <style name="MainStatText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/stat_primary</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:progressDrawable">@drawable/progress_bar_style</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>
    <style name="SectionDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/section_divider</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="SectionHeader" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="StatText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Theme.IdleRPG" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
</resources>