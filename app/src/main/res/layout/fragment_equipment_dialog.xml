<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Equipment"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Weapon Slot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/combat_stat_bg"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Weapon:"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEquippedWeapon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="None"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnUnequipWeapon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unequip"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Armor Slot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/combat_stat_bg"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Armor:"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEquippedArmor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="None"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnUnequipArmor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unequip"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Shield Slot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/combat_stat_bg"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Shield:"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEquippedShield"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="None"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnUnequipShield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unequip"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Amulet Slot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/combat_stat_bg"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Amulet:"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEquippedAmulet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="None"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnUnequipAmulet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unequip"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Ring Slot -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/combat_stat_bg"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Ring:"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEquippedRing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="None"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

                <Button
                    android:id="@+id/btnUnequipRing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unequip"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCloseEquipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Close" />

</LinearLayout>