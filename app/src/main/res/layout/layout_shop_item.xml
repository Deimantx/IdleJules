<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Item Name" />

        <LinearLayout
            android:id="@+id/llItemStatsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemAttackBonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="ATK: +10"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvItemDefenseBonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="DEF: +5"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvItemAttackSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Speed: -100ms"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvItemCritRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Crit Rate: +5%"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvItemCritDamage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Crit DMG: +10%"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvItemDodge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Dodge: +3%"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tvItemHit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Hit: +2%"
                tools:visibility="visible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvItemCost"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="Cost: 100 Coins" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBuyItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="Buy" />
</LinearLayout>
