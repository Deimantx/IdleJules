<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/moneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money: 0"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/moneyPerSecondTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money per second: 0"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/workerCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workers: 0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/managerCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Managers: 0"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/makeMoneyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Money (+$1)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/hireWorkerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hire Worker (Cost: $10)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/hireManagerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hire Manager (Cost: $100)" />

</LinearLayout>
